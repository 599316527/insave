html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Recent Likes - Insave
    style.
        .user {text-transform: capitalize;}
        .images {display: flex; flex-wrap: wrap; justify-content: space-around; align-items: flex-end;}
        .image {width: 260px; margin: 1em 0;}
        .image img {width: 100%;}
        .link {text-decoration: none; color: inherit; margin-right: 1em;}

  body
    h1
        span.user #{user}'s
        span recent liked images
        sup Beta

    div.images
        each item in items
            div.image
                div
                    img(src=item.image_versions2.candidates[0].url)
                p
                    a.link(href="https://www.instagram.com/p/" + item.code + "/")
                        if item.caption
                            span #{item.caption.text}
                        else
                            small Empty caption
                    span by #{item.user.username}
